<!DOCTYPE html>
<html lang="fr" class="m-0 p-0 h-full">
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
			{# Include your CSS files here if needed #}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
		{% endblock %}
	</head>
	<body class="flex flex-col h-full">
		<header></header>
		<nav class="bg-white border-gray-200 dark:bg-gray-900">
			<div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
				<a class="flex items-center space-x-3 rtl:space-x-reverse" href="{{ path('landing') }}">
					<img src="Logo.png" class="h-8">
					<span class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white">Tutti-Fruitti</span>
				</a>

				<div class="flex md:order-2">
					{% if app.user %}
						{{ render(controller('App\\Controller\\SearchController::search')) }}
					{% endif %}
				</div>

				<ul class="flex flex-col p-4 md:p-0 mt-4 font-medium border border-gray-100 rounded-lg bg-gray-50 md:space-x-8 rtl:space-x-reverse md:flex-row md:mt-0 md:border-0 md:bg-white dark:bg-gray-800 md:dark:bg-gray-900 dark:border-gray-700">
					<li>
						<a href="{{ path('landing') }}" class="block py-2 px-3 text-white bg-blue-700 rounded md:bg-transparent md:text-blue-700 md:p-0 md:dark:text-blue-500" aria-current="page">Accueil</a>
					</li>
					{% if app.user %}
						<li>
							<a href="{{ path('favorites_index') }}" class="block py-2 px-3 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:hover:text-blue-700 md:p-0 md:dark:hover:text-blue-500 dark:text-white dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent dark:border-gray-700">Favoris</a>
						</li>
						<li>
							<a href="{{ path('user_edit') }}" class="block py-2 px-3 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:hover:text-blue-700 md:p-0 md:dark:hover:text-blue-500 dark:text-white dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent dark:border-gray-700">Mon compte</a>
						</li>
					{% endif %}

					{% if app.user %}
						<li>
							<a href="{{ path('app_logout') }}" class="block py-2 px-3 text-white bg-blue-700 rounded md:bg-transparent md:text-blue-700 md:p-0 md:dark:text-blue-500">Se déconnecter</a>
						</li>
					{% else %}
						<li>
							<a href="{{ path('app_login') }}" class="block py-2 px-3 text-white bg-blue-700 rounded md:bg-transparent md:text-blue-700 md:p-0 md:dark:text-blue-500">Connexion</a>
						</li>
					{% endif %}
				</ul>
			</div>
		</nav>
		<main>
			{% block main %}{% endblock %}
		</main>
		<footer class="bg-gray-900 mt-auto">
			<div class="container mx-auto flex justify-between items-center p-4">
				<p class="text-white">Copyright &copy; 2024</p>
				<a href="#" class="text-white">Mentions légales</a>
			</div>
		</footer>
	</body>
</html></body></html>
