{% extends 'base.html.twig' %}

{% block title %}
	{{ artist.nameVariations[0] }}
{% endblock %}

{% block main %}
	<div class="artist-container">
		<h2>{{ artist.nameVariations.main ?? artist.nameVariations[0] ?? 'Unknown Artist' }}</h2>

		{% if artist.profile %}
			<p>{{ artist.profile }}</p>
		{% endif %}

		{% if artist.images %}
			<ul class="image-list">
				{% for image in artist.images %}
					<li>
						<img src="{{ image.uri }}">
					</li>
				{% endfor %}
			</ul>
		{% endif %}

		{% if artist.members %}
			<h3>Members</h3>
			<ul class="member-list">
				{% for member in artist.members %}
					<li>{{ member.name }}</li>
				{% endfor %}
			</ul>
		{% endif %}
	</div>

{% endblock main %}
