{% extends 'base.html.twig' %}

{% block title %}
	{{ release.title }}
{% endblock %}

{% block main %}
	<h1>Release details</h1>
	<p>Title:
		{{ release.title }}</p>
	<img src="{{ release.thumb }}" alt="Release cover">
	<p>Year:
		{{ release.year }}</p>
	<p>Format:
		{% for formats in release.format %}
			{{ format.name }}
		{% endfor %}
	</p>
	<p>Genre:
		{% for genres in release.genre %}
			{{ genre.name }}
		{% endfor %}
	</p>
	<p>Label:
		{{ release.label }}</p>
	<p>Style:
		{% for styles in release.style %}
			{{ styles }}
		{% endfor %}
	</p>
	<p>Resource URL:
		<a href="{{ release.resourceUrl }}">{{ release.resourceUrl }}</a>
	</p>
	<p>URI:
		<a href="{{ release.uri }}">{{ release.uri }}</a>
	</p>
{% endblock %}
